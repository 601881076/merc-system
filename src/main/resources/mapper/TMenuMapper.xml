<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xhnj.mapper.TMenuMapper">
    <sql id="menuSql">
        id,
        name,
        parent_id,
        level,
        sort,
        create_time,
        update_time,
        status
    </sql>
    <select id="getUmsMenuByAdminId" resultType="com.xhnj.model.TMenu">
        SELECT <include refid="menuSql"/> from t_menu where parent_id=#{adminId,jdbcType=VARBINARY}
    </select>
    <select id="getUmsMenu" resultType="com.xhnj.model.TMenu">
        SELECT <include refid="menuSql"/> from t_menu where id=#{roleId,jdbcType=VARBINARY}
    </select>
    <select id="selectMenuList" resultType="com.xhnj.model.TMenu">
        select id,name,parent_id,level,sort,create_time,update_time,status FROM t_menu WHERE level = 0 LIMIT 0,20
    </select>
</mapper>